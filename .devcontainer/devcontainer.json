{
  "name": "whonb-nbcode",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    // "ghcr.io/devcontainers/features/git:1": {},
    // "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "dev.containers.copyGitConfig": false // 禁用从宿主机拷贝 git 配置
      }
    }
  },
  // "postCreateCommand": "node -v && git --version && gh --version && gemini --version"
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/sync-home/.bashrc,target=/home/node/.bashrc,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/sync-home/.npmrc,target=/home/node/.npmrc,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/sync-home/.profile,target=/home/node/.profile,type=bind,consistency=cached"
  ]
}